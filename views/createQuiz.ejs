<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>

  <!--Linking the Stylesheets-->
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />
  <link rel="stylesheet" href="/styles/createQuiz.css" />

  <!--Install external scripts required-->
  <script src="https://code.jquery.com/jquery-3.6.3.min.js"></script>

  <!--App JS-->
  <script src="/scripts/createQuiz.js"></script>
</head>

<body>
  <nav id="navigation-bar">
    <span>QUIZZLY</span>
    <span>Your Quizzes</span>
  </nav>
  <h1 id="intro-line">
    Hi Peter!
  </h1>
  <div class="make-quiz-header">
    <h3>Make Your Own Quiz</h3>
    <h5>Title of Quiz</h5>
    <form action="/quiz/create" method="POST">
     <div class = "quiz-title">
      <input type="text" name = "name">
     </div> 

      <h5>Description of Quiz</h5>
      <div class="quiz-description">
        <input type="text">
      </div>
      <div id="public-or-private">
        <input type="checkbox" value = "true" name = "private">
        <label for="private">Would you like to make the quiz private?</label>
      </div>
      <div>
        <!-- <button id="add-question" type="submit">Add Quiz Question</button> -->
      </div>
      <div>
        <button id="submit-quiz" type="submit">Submit Quiz</button>
      </div>
    </form>
  </div>
  <section id="user-created-questions">

  </section>
</body>

</html>