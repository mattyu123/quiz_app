<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>

  <!--Linking the Stylesheets-->
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />
  <link rel="stylesheet" href="/styles/createQuiz.css"/>
  <link rel="stylesheet" href="/styles/styles.css">

  <!--Install external scripts required-->
  <script src="https://code.jquery.com/jquery-3.6.3.min.js"></script>

  <!--App JS-->
  <script src="/scripts/createQuiz.js"></script>
</head>
<body>
  <nav id="navigation-bar">
    <span>QUIZZLY</span>
    <span>Your Quizzes</span>
  </nav>
  <h1>Quiz: <%= quiz.name %></h1>
  <p><%= quiz.description %></p>

  <% for (const question of questions) { %>
    <h3>Question</h3>
    <p><%= question.question %></p>
    <form>
      <input type="radio" name="answer" value="<%= question.option_1 %>">
      <label><%= question.option_1 %></label><br>
      <input type="radio" name="answer" value="<%= question.option_2 %>">
      <label><%= question.option_2 %></label><br>
      <input type="radio" name="answer" value="<%= question.option_3 %>">
      <label><%= question.option_3 %></label><br>
      <input type="radio" name="answer" value="<%= question.option_4 %>">
      <label><%= question.option_4 %></label><br>
    </form>
  <% } %>

  <button id="submit-quiz" type="submit">Submit Quiz</button>
</body>
</html>
