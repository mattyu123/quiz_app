  <!-- Provided form and script for sharing the URL -->
  <form id="copyURLForm">
    <input type="hidden" id="shareURL" value="<%= shareURL %>">
    <button type="button" id="copyButton">Copy URL</button>
  </form>

  <script>
    // Function to copy the URL to clipboard
    function copyURLToClipboard() {
      const urlInput = document.getElementById('shareURL');
      urlInput.select();
      document.execCommand('copy');
      alert('URL copied to clipboard!');
    }

    // Attach event listener to the Copy URL button
    document.getElementById('copyButton').addEventListener('click', copyURLToClipboard);
  </script>
